<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tour Agency</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tour Agency", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trips", "Index", "Home")</li>
                    <li>@Html.ActionLink("Add Trip", "Create", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container">
        @RenderSection("featured", required: false)
    </div>
    <br />
    <div class="container body-content">
        
        @RenderBody()

    </div>
    <br/>
    <br/>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <footer class =" container ">
            <br/>
            <p>&copy; @DateTime.Now.Year - Tour Agency by Marco Leite</p>
        </footer>
</div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
