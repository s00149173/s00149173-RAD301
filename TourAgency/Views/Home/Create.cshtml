@model TourAgency.Models.Trip

@{
    ViewBag.Title = "Add Trip";
}

<link type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" rel="stylesheet">

@section Scripts {

    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script type="text/javascript">

        $(function () {
            $("#startDate").datepicker({
                dateFormat: 'dd/mm/yy',
                showWeek: true,
                defaultDate: "+1w",
                changeMonth: true,
                changeYear: true,
                numberOfMonths: 2,
                onClose: function (selectedDate) {
                    $("#endDate").datepicker("option", "minDate", selectedDate);
                }
            });
            

            $("#endDate").datepicker({
                dateFormat: 'dd/mm/yy',
                showWeek: true,
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 2,
                onClose: function (selectedDate) {
                    $("#startDate").datepicker("option", "maxDate", selectedDate);
                }
            });
        });
    </script>

}

<div class="col-md-offset-2 col-md-8 col-md-offset-2">

    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="thumbnail">
            <div class="container-fluid">
                <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
                    <div class="row text-center">
                        <h2>Create a new Trip</h2>
                    </div>

                    <div class="row">
                        <h3>@Html.DisplayNameFor(model => model.Name)</h3>
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(model => model.Name, new { @class = "input-sm form-control", placeholder = "Trip Name" })
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor((model => model.Name))
                    </div>
                    <br />

                    <div class="row">
                        <h3>@Html.DisplayNameFor(model => model.StartDate)</h3>
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "input-sm form-control", id = "startDate", placeholder = "Start Date" })

                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor((model => model.StartDate))
                    </div>
                    <br />

                    <div class="row">
                        <h3>@Html.DisplayNameFor(model => model.EndDate)</h3>
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(model => model.EndDate, new { @class = "input-sm form-control", id = "endDate", placeholder = "End Date" })
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor((model => model.EndDate))
                    </div>
                    <br />

                    <div class="row">
                        <h3>@Html.DisplayNameFor(model => model.MinimumguestN)</h3>
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(model => model.MinimumguestN, new { @class = "input-sm form-control", placeholder = "Nº Min Guest" })
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor((model => model.MinimumguestN))
                    </div>
                    <br />

                    <div class="row text-center">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        <input type="submit" class="btn btn-success" value="Create" />
                    </div>
                    <br />
                </div>
            </div>
        </div>
    }

</div>
